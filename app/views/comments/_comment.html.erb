<%= turbo_frame_tag dom_id(comment) do %>
  <% unless comment.archived? %>
    <p>
        <strong>Commenter:</strong>
        <%= comment.commenter %>
      </p>

      <p>
        <strong>Comment:</strong>
        <%= comment.body %>
      </p>

      <p>
      <%= link_to 'Delete', [comment.article, comment],
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </p>
      <hr>
  <% end %>
<% end %>